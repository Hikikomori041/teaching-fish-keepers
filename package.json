{
  "scripts": {
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky"
  },
  "lint-staged": {
  "*.{js,jsx,ts,tsx,json}": [
    "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
  ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/jsdom": "^27.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
